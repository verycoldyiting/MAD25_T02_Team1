<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Permissions for internet, image access, and storage -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Calendar permissions - required for direct calendar insertion -->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <!-- biometric login -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <queries>
        <intent>
            <action android:name="android.speech.RecognitionService" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_ticketlogonewwords"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_ticketlogonew"
        android:supportsRtl="true"
        android:theme="@style/Theme.MAD25_T02_Team1"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBTFyZwPZn2UmtDWxRZCIPKIRI3_YLooxY" />
        <activity
            android:name=".LoginScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MAD25_T02_Team1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterPage"
            android:exported="false"
            android:theme="@style/Theme.MAD25_T02_Team1" />
        <activity
            android:name=".HomePage"
            android:exported="false"
            android:theme="@style/Theme.MAD25_T02_Team1" />
        <activity
            android:name=".BuyTicketActivity"
            android:exported="false"
            android:theme="@style/Theme.MAD25_T02_Team1" />
        <activity
            android:name=".EventDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.MAD25_T02_Team1" />
        <activity
            android:name=".PaymentPage"
            android:exported="false"
            android:theme="@style/Theme.MAD25_T02_Team1" />
        <activity
            android:name=".EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.MAD25_T02_Team1" />
        <activity
            android:name=".BookingHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.MAD25_T02_Team1" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.MAD25_T02_Team1" />
        <activity
            android:name=".VenueMapActivity"
            android:exported="false"
            android:theme="@style/Theme.MAD25_T02_Team1" />

        <!-- ========================================== -->
        <!-- NEW: QR CODE ACTIVITIES - START           -->
        <!-- ========================================== -->

        <!-- QR Code Activity - Shows the QR code with 30-second refresh -->
        <activity
            android:name=".QRCodeActivity"
            android:exported="false"
            android:theme="@style/Theme.MAD25_T02_Team1" />

        <!-- Ticket Verification Activity - Shows verified ticket details when QR is scanned -->
        <activity
            android:name=".TicketVerificationActivity"
            android:exported="true"
            android:theme="@style/Theme.MAD25_T02_Team1">
            <!-- Deep link to handle QR code scans - opens directly in app -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="ticketlah"
                    android:host="verify" />
            </intent-filter>
        </activity>

        <!-- ========================================== -->
        <!-- NEW: QR CODE ACTIVITIES - END             -->
        <!-- ========================================== -->

    </application>

</manifest>